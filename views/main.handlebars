<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Funky word game</title>
  <link rel="stylesheet" type="text/css" href="css/styles.css">
</head>

<body>
  <header id="header">
    <div id="title">
      <h1>Mystery Word Game</h1>
    </div>
    <div id="numGuesses">
      <h3>You have {{guesses}} guesses left!</h3>
    </div>
  </header>
  <main>
    <section>
      <div id="hiddenWord">
        <h1>{{#each hiddenWord}}{{this}}  {{/each}}</h1>
      </div>
      {{#errors}}
        <p>{{this}}</p>
      {{/errors}}
      <form id="input" action="/" method="post">
        <label for="guess">Enter your guess: </label>
        <input id="guess" type="text" name="guess" value="">
      </form>
      {{#if badGuesses}}
        <div id="badGuesses">
          <p>Incorrect guesses:</p>
          <h3>{{#each badGuesses}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}</h3>
        </div>
      {{/if}}
    </section>
  </main>
  <footer>
    <p>Thanks for playing!</p>
  </footer>
  <script type="text/javascript" src="scripts/main.js">
  </script>
</body>

</html>
